<!-- ./kstarform processlog panel -->
<div class="panel panel-default" id="_kstarform_processlog_component">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#_kstarform_processlog_panel">@Html.CSHtmlResx("ApprovalHis")
            </a>
        </h4>
    </div>
    <div id="_kstarform_processlog_panel" class="panel-collapse collapse in kstar-control" title="@Html.CSHtmlResx("ApprovalHisInfo")">
        <div class="panel-body">

            <div class="table-responsiv">
                <table class="table table-hover">
                    <thead class="kstar-control" id="thead_processlog" title="@Html.CSHtmlResx("ApprovalHisHeader")">
                        <tr>
                            <th>@Html.CSHtmlResx("ActivityName")</th>
                            @*<th>@Html.CSHtmlResx("Principal")</th>*@
                            <th>@Html.CSHtmlResx("ActionAgent")</th>
                            <th>@Html.CSHtmlResx("PostName")</th> 
                            <th>@Html.CSHtmlResx("OperationName")</th>
                            <th>@Html.CSHtmlResx("Memo")</th> 
                            <th>@Html.CSHtmlResx("OperationTime")</th>
                        </tr>
                    </thead>
                    <tbody class="kstar-control" id="tbody_processlog" title="@Html.CSHtmlResx("ApprovalHisDetail")" data-bind="foreach: $root">
                        <tr>
                            <td>
                                <span data-bind="text: ActivityName"></span></td>
                            @*<td>
                                <span data-bind="text: TaskOwnerName"></span></td>*@
                            <td>
                                <span data-bind="text: ActionTakerName"></span></td>
                            <td>
                                <span data-bind="text: PostName"></span>
                            </td>

                            <td>
                                <span data-bind="text: ActionName"></span></td>
                            <td>
                                <span data-bind="text: KStar.StringHelper.subStr(Comment(),20)"></span>
                                <button type="button" class="btn btn-link btn-sm"  title="@Html.CSHtmlResx("Memo")" data-placement="auto right" data-toggle="popover" 
                                    data-bind="attr:{'data-content':Comment,style:KStar.StringHelper.getLength(Comment())>20?'display:inline':'display:none'}">
                                    @Html.CSHtmlResx("More")
                                </button>
                            </td>
                            <td>
                                <span data-bind="text: moment(CreatedDate()).format('YYYY-MM-DD HH:mm:ss')"></span></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<!-- ./kstarform processlog panel -->
