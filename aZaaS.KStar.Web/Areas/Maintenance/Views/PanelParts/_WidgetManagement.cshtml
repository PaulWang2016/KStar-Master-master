@using aZaaS.KStar.Html;
<div id="WidgetTab">
    <div class="top-toolbar">
        <a class="k-button Add" href="javascript:void(0)"><span class="glyphicon glyphicon-plus"></span></a>
        <a class="k-button Delete" href="javascript:void(0)"><span class="glyphicon glyphicon-remove"></span></a>
    </div>
    <div id="WidgetList"></div>
</div>

<!--/.AddWidgetWindow-->
<div id="AddWidgetWindow" style="display: none" class="overflowhidden">
    <div class="row">
           <div class="col-xs-2 col-sm-2 col-md-2">@Html.CSHtmlResx("Key")</div>
        <div class="col-xs-4 col-sm-4 col-md-4">
            <input type="text" style="width: 100%;" class="k-textbox Key" />
        </div>

          <div class="col-xs-2 col-sm-2 col-md-2">@Html.CSHtmlResx("DisplayName")</div>
        <div class="col-xs-4 col-sm-4 col-md-4">
            <input type="text" style="width: 100%;" class="k-textbox DisplayName" />
        </div>
    </div>
    <div class="row">
          <div class="col-xs-2 col-sm-2 col-md-2">@Html.CSHtmlResx("Content")</div>
        <div class="col-xs-10 col-sm-10 col-md-10">
            <textarea id="RazorContent" style="width:100%;height:100%" class="k-textbox"></textarea>
        </div>
    </div>
    <div class="row">
             <div class="col-xs-2 col-sm-2 col-md-2">@Html.CSHtmlResx("Description")</div>
        <div class="col-xs-10 col-sm-10 col-md-10">
            <input type="text" style="width: 100%;" class="k-textbox Description" />
        </div>
    </div>
    <div class="operabar">
        <div class="operamask"></div>
        <div class="operacontent">
           <button class="k-button windowConfirm" data-url="" style="float: left;">@Html.CSHtmlResx("Confirm")</button>
            <button class="k-button windowCancel" style="float: right">@Html.CSHtmlResx("Cancel")</button>
        </div>
    </div>
</div>
<!--/.AddWidgetWindow-->
<script src="/JSResource/GetJavascriptResx?jsPageName=Maintenance_SeaWidgetManagement" type="text/javascript"></script>
