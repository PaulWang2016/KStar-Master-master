@using aZaaS.KStar.Html;
<!--delegation_list-->
<div class="section">
    <div class="selectbar1">
        <div style="width:100%; margin-bottom:5px; min-width:1066px;">
            <span>@Html.CSHtmlResx("StartDateFrom")</span>
            <span>
                <input name="StartDate" type="text" /></span>
            <span>@Html.CSHtmlResx("To")</span>
            <span>
                <input name="EndDate" type="text" /></span>
            <span>@Html.CSHtmlResx("From")</span>
            <span>
                <input class="k-textbox" name="DelegateFrom" type="text" /></span>                      
            <span>@Html.CSHtmlResx("Delegateto")</span>  
            <span>
                <input class="k-textbox" name="DelegateTo" type="text" /></span>
        </div>
        <div style="width:100%; margin-bottom:5px; min-width:1066px;">            
            <span>&nbsp;&nbsp;&nbsp;&nbsp;@Html.CSHtmlResx("Status")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <span>
                <input name="Status" type="text" /></span>
            <span style="margin-right: 200px; float:right;">
                <input class="k-button selectbtn" name="select" type="button" value="@Html.CSHtmlResx("select")" />
            </span>
        </div>       
    </div>
    <div id="adminDelegationList" class="sectionGrid">
    </div>
</div>
<!--/.delegation_list-->

<div id="AddDelegationWindow" style="display: none" class="overflowhidden">
    <div class="row">
        <div class="col-lg-6 col-md-6  col-sm-6">
            <table style="margin-top: 10px; height: 150px;">
                <tr>
                    <td style="width: 90px">@Html.CSHtmlResx("From")</td>
                    <td>
                        <span class="k-textbox k-space-right" style="width: 100%;">
                            <input id="AdmindelegateFrom" />
                            <a href="javascript:void(0)" class="k-icon k-i-search searchFrom">&nbsp;</a>
                        </span>
                        <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg hide" data-for="ProcessName" role="alert">
                            <span class="k-icon k-warning"></span>@Html.CSHtmlResx("FromRequired")</span>
                    </td>
                </tr>
                <tr>
                    <td style="width: 90px">@Html.CSHtmlResx("FormDelegateto")</td>
                    <td>
                        <div>
                            <select id="AdmindelegateTo" style="width: 100%; height: 60px; overflow: auto; background: inherit;"></select>@*disabled="disabled"*@
                        </div>
                        <a href="javascript:void(0)" style="float: right; margin-top: 5px;" class="k-icon k-i-search searchTo"></a>
                        <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg hide" data-for="ProcessName" role="alert">
                            <span class="k-icon k-warning"></span>@Html.CSHtmlResx("DelegatetoRequired")</span>
                    </td>
                </tr>
                <tr>
                    <td>@Html.CSHtmlResx("StartDate")</td>
                    <td>
                        <input class="StartDate" style="width: 100%;" />
                        <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg hide" data-for="ProcessName" role="alert">
                            <span class="k-icon k-warning"></span>@Html.CSHtmlResx("StartDateRequired")</span>
                        <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg k-dateinvalid-msg hide" data-for="ProcessName" role="alert">
                            <span class="k-icon k-warning"></span>@Html.CSHtmlResx("DateInvalid")</span>
                    </td>
                </tr>
                <tr>
                    <td>@Html.CSHtmlResx("EndDate")</td>
                    <td>
                        <input class="EndDate" style="width: 100%;" />
                        <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg hide" data-for="ProcessName" role="alert">
                            <span class="k-icon k-warning"></span>@Html.CSHtmlResx("EndDateRequired")</span>
                        <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg k-dateinvalid-msg hide" data-for="ProcessName" role="alert">
                            <span class="k-icon k-warning"></span>@Html.CSHtmlResx("DateInvalid")</span>
                        <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg k-enddateinvalid-msg hide" data-for="ProcessName" role="alert">
                            <span class="k-icon k-warning"></span>@Html.CSHtmlResx("EndDateInvalid")</span>
                    </td>
                </tr>
                <tr>
                    <td>@Html.CSHtmlResx("Remark")</td>
                    <td>
                        <textarea class="k-textbox Remark" style="width: 100%;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-lg-6 col-md-6  col-sm-6">
            <div style="margin-top: 5px; margin-bottom: 5px;">@Html.CSHtmlResx("Processes")
                <span class="k-textbox k-space-right" style="width: 79%;">
                    <input id="processesApps" type="text" style="width: 99%" />
                    <a href="javascript:void(0)" class="k-icon k-i-search searchprocess">&nbsp;</a>
                </span>
            </div>
            <div id="processesList" class="processesList">
            </div>
            <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg hide" data-for="ProcessName" role="alert">
                <span class="k-icon k-warning"></span>@Html.CSHtmlResx("processesRequired")</span>
        </div>
    </div>
    <div class="operabar">
        <div class="operamask"></div>
        <div class="operacontent">
            <button class="k-button windowConfirm" style="float: left;">@Html.CSHtmlResx("Confirm")</button>
            <button class="k-button windowCancel" style="float: right">@Html.CSHtmlResx("Cancel")</button>
        </div>
    </div>
</div>
<!--/.AddWindow-->

<div id="AddRoleEmployeeWindow" style="display: none">
