                <input type="text" id="RoleEmployeeInput" class="k-textbox" />
            </span>
            <span style="margin: 3px;">
                <a class="k-button" id="RoleEmployeeSelect">@Html.CSHtmlResx("select")</a>
            </span>
        </div>
        <div id="RoleStaffList" style="margin-top: 7px;"></div>
